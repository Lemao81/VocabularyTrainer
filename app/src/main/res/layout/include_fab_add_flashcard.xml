<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.jueggs.vocabularytrainer.viewmodels.interfaces.IAddFlashCardViewModel" />
    </data>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fabAddFlashCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.addFlashCard()}"
        android:src="@drawable/ic_add_white_24dp"
        app:fab_colorNormal="@color/fab_normal"
        app:fab_colorPressed="@color/fab_pressed"
        app:fab_size="normal" />
</layout>