        <!--app:layout_constraintStart_toEndOf="@+id/btnWrong" />-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabRemoveFlashCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> viewModel.removeFlashCard()}"
            app:layout_constraintBottom_toTopOf="@id/fabAddFlashCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_remove_white_24dp" />

        <include
            android:id="@+id/fabAddFlashCard"
            layout="@layout/fab_add_flash_card"
            android:onClick="@{() -> viewModel.addFlashCard()}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>